<h1>Admin Dashboard</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Products: <%= @productsCount %></h5>
        <%= link_to 'View Products', '/admin/products' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Categories: <%= @categoriesCount %></h5>
        <p class="card-text"><% @categories.each do |category| %>
          - <%= category.name %>  
        <% end %></p>
      </div>
    </div>
  </div>
</div>